@using Microsoft.AspNetCore.Identity
@inject SignInManager<Weather_forecast.Models.ApplicationUser> signInManager
@model Weather_forecast.ViewModels.CityAndApi
@if (signInManager.IsSignedIn(User))
{
	ViewData["Title"] = "Home";
}
else
{
	ViewData["Title"] = "Shared Link";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>


<div class="text-center">
    @if (signInManager.IsSignedIn(User))
    {
        <h1 class="display-4">Welcome to the weather forecast app</h1>
        <div style="display:flex; justify-content:center; align-items:center; gap:12px; flex-wrap:nowrap; width:100%;">
            @if (ViewData["showHistory"] == "true")
            {
                <form asp-action="History" asp-controller="Home" method="get">
                    <button type="submit" class="btn btn-outline-secondary btn-sm whitehover text-black">
                        <span>Get Search History</span>
                        <img src="https://www.svgrepo.com/show/521702/history.svg" style="width:20px; margin-top:-4px;" />
                    </button>
                </form>
            }
            <button type="button" onclick="return GetLocationOnMap()" class="btn btn-outline-secondary btn-sm whitehover text-black">
                <span>Choose location on map</span>
                <img src="https://www.svgrepo.com/show/532550/map-location-pin.svg" style="width:22px; margin-top:-3px;" />
            </button>
        </div>
        <p>Search for a location to see its current weather:</p>
        <form asp-action="City" asp-controller="Home" method="post" class="form-grid">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="City.CityName">Location: </label>
            @if (Model == null)
            {
                <input asp-for="City.CityName" id="cityNameInput" />
            }
            else
            {
                @if (Model.City == null)
                {
                    <input asp-for="City.CityName" id="cityNameInput" />
                }
                else
                {
                    <input asp-for="City.CityName" value="@Model.City.CityName" id="cityNameInput" />
                }
            }
            <button type="submit" value="GPS" name="buttonType" style="height:30px;" class="btn btn-outline-secondary btn-sm whitehover text-black">
                <span>Get my location</span>
                <img src="https://www.svgrepo.com/show/522166/location.svg" style="width: 20px; margin-top: -1px;" />
            </button>
            @if (ViewBag.ShowModelError == true)
            {
                <span asp-validation-for="City.CityName" class="text-danger"></span>
            }
            <label asp-for="ForecastDate" style="margin-top: 9px">Date: </label>
            <input asp-for="ForecastDate" />
            <button type="submit" value="SpecificDay" name="buttonType" style="height:30px;" class="btn btn-outline-secondary btn-sm whitehover text-black">
                <span>Search specific day</span>
                <img src="https://www.svgrepo.com/show/522234/plus.svg" style="width: 14px; margin-top: 2px;" />
            </button>
            
            <label asp-for="DayAmount" style="margin-top: 9px">Day(s) amount: </label>
            <input asp-for="DayAmount" />
            <button type="submit" value="MultipleDays" name="buttonType" style="height:30px;" class="btn btn-outline-secondary btn-sm whitehover text-black">
                <span>Search multiple days</span>
                <img src="https://www.svgrepo.com/show/370953/add-multiple.svg" style="width: 35px" />
            </button>
        </form>
        ViewBag.ShowModelError = true;
    }
    else if (ViewBag.SharedUrl != null)
    {
        <div>
            <h4>Want to see the forecast without relying on other people to share it to you?</h4>
            <a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
            <a class="btn btn-primary" asp-controller="Account" asp-action="Login">Login</a>
        </div>
    }
    @if (Model != null)
    {
        @if (ViewBag.error == true)
        {
            <div style="margin-top: 0.5rem;">
                Failed to fetch weather data for @Model.City.CityName
            </div>
        }
        @if (Model.Weather != null && !string.IsNullOrEmpty(Model.Weather.resolvedAddress))
        {
            @if (Model.DisplayMultipleDays == false)
            {
                DateTime currentDate = DateTime.Now;
                DateTime displayDate = DateTime.Now;
                int dayDifference = 0;
                int hourTime = int.Parse(currentDate.ToString("%h"));
                if (Model.ForecastDate != null)
                {
                    DateTime notNullableDate = (DateTime)Model.ForecastDate;
                    dayDifference = (notNullableDate.Date - currentDate.Date).Days;
                    hourTime = int.Parse(notNullableDate.ToString("%H"));
                    int totalDays = Model.Weather.days.Count - 1;
                    if (dayDifference > totalDays)
                    {
                        dayDifference = totalDays;
                        ViewBag.dateError = $"Cannot forecast weather longer than {totalDays} days, defaulted to day {totalDays}";
                    }
                    if (dayDifference < 0)
                    {
                        dayDifference = 0;
                        ViewBag.dateError = "Cannot forecast weather in the past, defaulted to today";
                    }
                    displayDate = displayDate.AddDays(dayDifference);
                }
                <p style="color: red;">@ViewBag.dateError</p>

                string forecastTime = Model.Weather.days[dayDifference].hours[hourTime].datetime;

                <table style="border: 3px solid black; margin-left: auto; margin-right: auto; max-width: 500px; width: fit-content; margin-top: 10px">
                    <tr style="border: 3px solid black">
                        <th colspan="3" style="text-align:center; font-size: 40px;">
                            <span id="weatherAddress">@Model.Weather.resolvedAddress</span> (@displayDate.ToString().Substring(0, 10) @forecastTime)
                            @if (signInManager.IsSignedIn(User) && ViewBag.SharedUrl == null)
                            {
                                <button onClick="return GetForecastDetailsPartial('@Model.Weather.resolvedAddress', '@Model.ForecastDate.ToString()')" class="btn btn-outline-secondary whitehover text-black" style="font-size: 20px; margin-top: -10px;">
                                    <span>Forecast Details</span>
                                </button>
                            }
                        </th>
                    </tr>
                    <tr style="border: 3px solid black">
                        <td style="text-align: center; padding: 10px; font-size: 40px; padding: 10px; white-space: nowrap">
                            @Model.Weather.days[dayDifference].hours[hourTime].conditions<br />
                            @switch (Model.Weather.days[dayDifference].hours[hourTime].icon)
                            {
                                case "snow":
                                    <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/snow.svg">
                                    break;
                                case "snow-showers-day":
                                    <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/snow-showers-day.svg">
                                    break;
                                case "snow-showers-night":
                                    <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/snow-showers-night.svg">
                                    break;
                                case "thunder-rain":
                                    <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/thunder-rain.svg">
                                    break;
                                case "thunder-showers-day":
                                    <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/thunder-showers-day.svg">
                                    break;
                                case "thunder-showers-night":
                                    <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/thunder-showers-night.svg">
                                    break;
                                case "rain":
                                    <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/rain.svg">
                                    break;
                                case "showers-day":
                                    <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/showers-day.svg">
                                    break;
                                case "showers-night":
                                    <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/showers-night.svg">
                                    break;
                                case "fog":
                                    <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/1st%20Set%20-%20Color/fog.svg">
                                    break;
                                case "wind":
                                    <img style="width:250px;" src="https://www.svgrepo.com/show/528823/wind.svg">
                                    break;
                                case "cloudy":
                                    <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/cloudy.svg">
                                    break;
                                case "partly-cloudy-day":
                                    <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/partly-cloudy-day.svg">
                                    break;
                                case "partly-cloudy-night":
                                    <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/partly-cloudy-night.svg">
                                    break;
                                case "clear-day":
                                    <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/clear-day.svg">
                                    break;
                                case "clear-night":
                                    <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/clear-night.svg">
                                    break;
                                default:
                                    <span>Image for: @Model.Weather.days[dayDifference].hours[hourTime].icon does not exist</span>
                                    break;
                            }
                        </td>
                        <td style="text-align: center; font-size: 40px; padding: 10px;">@Model.Weather.days[dayDifference].hours[hourTime].temp°@Model.Units.COrF</td>
                        <td style="text-align: center; font-size: 40px; padding: 10px; white-space: nowrap">Feels like<br />@Model.Weather.days[dayDifference].hours[hourTime].feelslike°@Model.Units.COrF</td>
                    </tr>
                    <tr style="border: 3px solid black">
                        <td style="text-align: center; font-size: 40px; padding: 10px" colspan="3">@Model.Weather.description</td>
                    </tr>
                    <tr style="border: 3px solid black">
                        <td style="text-align: center; font-size: 40px; padding: 10px; white-space: nowrap">Wind speed<br />@Model.Weather.days[dayDifference].hours[hourTime].windspeed @Model.Units.KmOrMile/h</td>
                        <td style="text-align: center; font-size: 40px; padding: 10px; white-space: nowrap">Rain amount<br />@Model.Weather.days[dayDifference].hours[hourTime].precip @Model.Units.MmOrInches</td>
                        <td style="text-align: center; font-size: 40px; padding: 10px; white-space: nowrap">Rain chance<br />@Model.Weather.days[dayDifference].hours[hourTime].precipprob %</td>
                    </tr>
                    <tr style="border: 3px solid black">
                        <td style="text-align: center; font-size: 40px; padding: 10px; white-space: nowrap">Humidity<br />@Model.Weather.days[dayDifference].hours[hourTime].humidity %</td>
                        <td style="text-align: center; font-size: 40px; padding: 10px; white-space: nowrap">Cloud cover<br />@Model.Weather.days[dayDifference].hours[hourTime].cloudcover %</td>
                        <td style="text-align: center; font-size: 40px; padding: 10px; white-space: nowrap">Visibility<br />@Model.Weather.days[dayDifference].hours[hourTime].visibility @Model.Units.KmOrMile</td>
                    </tr>
                </table>
            }
            else
            {
                if (Model.DayAmount == null)
                {
                    Model.DayAmount = 0;
                }
                DateTime displayDate = DateTime.Now;
                DateTime currentDate = DateTime.Now;
                int dayDifference = 0;
                if (Model.DayAmount > 0 || Model.DayAmount < 0)
                {
                    DateTime maxDate = currentDate.AddDays((double)Model.DayAmount);
                    dayDifference = (maxDate.Date - currentDate.Date).Days - 1;
                    int totalDays = Model.Weather.days.Count - 1;
                    if (dayDifference > totalDays)
                    {
                        dayDifference = totalDays;
                        ViewBag.dateError = $"Cannot forecast weather longer than {totalDays} days, defaulted to day {totalDays}";
                    }
                    if (dayDifference < 0)
                    {
                        dayDifference = 0;
                        ViewBag.dateError = "Cannot forecast weather in the past, defaulted to today";
                    }
                    Model.DayAmount = dayDifference;
                }
                <h1 id="multipleDayAddress">@Model.Weather.resolvedAddress</h1>
                <p style="color: red;">@ViewBag.dateError</p>
                <div style="display: flex; flex-wrap: nowrap; overflow-x: auto; gap: 8px; padding: 10px; white-space:nowrap">
                    @for (int i = 0; i <= dayDifference; i++)
                    {
                        if (i != 0)
                        {
                            displayDate = displayDate.AddDays(1);
                        }
                        <table style="border: 3px solid black; width: 400px;">
                            <tr style="border: 3px solid black">
                                @if (i == 0)
                                {
                                    <th colspan="2" style="text-align:center; font-size: 40px;">@displayDate.ToString().Substring(0, 10) (Today)</th>
                                }
                                else if (i == 1)
                                {
                                    <th colspan="2" style="text-align:center; font-size: 40px;">@displayDate.ToString().Substring(0, 10) (Tomorrow)</th>
                                }
                                else
                                {
                                    <th colspan="2" style="text-align:center; font-size: 40px;">@displayDate.ToString().Substring(0, 10)</th>
                                }
                            </tr>
                            @for (int j = 0; j < 4; j++)
                            {
                                string timeOfDay = "";
                                int hourTime = 0;
                                @switch (j)
                                {
                                    case 0:
                                        timeOfDay = "Night (00:00)";
                                        hourTime = 0;
                                        break;
                                    case 1:
                                        timeOfDay = "Morning (06:00)";
                                        hourTime = 6;
                                        break;
                                    case 2:
                                        timeOfDay = "Day (12:00)";
                                        hourTime = 12;
                                        break;
                                    case 3:
                                        timeOfDay = "Evening (18:00)";
                                        hourTime = 18;
                                        break;
                                    default:
                                        break;
                                }
                                DateTime ButtonForecastDate = currentDate;
                                ButtonForecastDate = ButtonForecastDate.AddDays(i);
                                int hourDiff = hourTime - ButtonForecastDate.Hour;
                                ButtonForecastDate = ButtonForecastDate.AddHours(hourDiff);
                                <tr>
                                    <th colspan="2" style="text-align:center; font-size: 40px;">
                                        @timeOfDay
                                        <button onClick="return GetForecastDetailsPartial('@Model.Weather.resolvedAddress', '@ButtonForecastDate.ToString()')" class="btn btn-outline-secondary whitehover text-black" style="font-size: 20px; margin-top: -10px;"><span>Details</span></button>
                                    </th>
                                </tr>
                                <tr style="border-bottom: 3px solid black;">
                                    <td style="text-align: center; padding: 10px; font-size: 40px">
                                        @switch (Model.Weather.days[i].hours[hourTime].icon)
                                        {
                                            case "snow":
                                                <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/snow.svg">
                                                break;
                                            case "snow-showers-day":
                                                <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/snow-showers-day.svg">
                                                break;
                                            case "snow-showers-night":
                                                <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/snow-showers-night.svg">
                                                break;
                                            case "thunder-rain":
                                                <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/thunder-rain.svg">
                                                break;
                                            case "thunder-showers-day":
                                                <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/thunder-showers-day.svg">
                                                break;
                                            case "thunder-showers-night":
                                                <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/thunder-showers-night.svg">
                                                break;
                                            case "rain":
                                                <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/rain.svg">
                                                break;
                                            case "showers-day":
                                                <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/showers-day.svg">
                                                break;
                                            case "showers-night":
                                                <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/showers-night.svg">
                                                break;
                                            case "fog":
                                                <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/1st%20Set%20-%20Color/fog.svg">
                                                break;
                                            case "wind":
                                                <img style="width:250px;" src="https://www.svgrepo.com/show/528823/wind.svg">
                                                break;
                                            case "cloudy":
                                                <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/cloudy.svg">
                                                break;
                                            case "partly-cloudy-day":
                                                <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/partly-cloudy-day.svg">
                                                break;
                                            case "partly-cloudy-night":
                                                <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/partly-cloudy-night.svg">
                                                break;
                                            case "clear-day":
                                                <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/clear-day.svg">
                                                break;
                                            case "clear-night":
                                                <img style="width:250px;" src="https://raw.githubusercontent.com/visualcrossing/WeatherIcons/58c79610addf3d4d91471abbb95b05e96fb43019/SVG/3rd%20Set%20-%20Color/clear-night.svg">
                                                break;
                                            default:
                                                <span>Image for: @Model.Weather.days[i].hours[hourTime].icon does not exist</span>
                                                break;
                                        }
                                    </td>
                                    <td style="text-align: center; font-size: 40px; padding: 10px">@Model.Weather.days[i].hours[hourTime].temp°@Model.Units.COrF<br />Wind speed<br />@Model.Weather.days[i].hours[hourTime].windspeed @Model.Units.KmOrMile/h</td>
                                </tr>
                            }
                        </table>
                    }
                </div>
            }
            @if (signInManager.IsSignedIn(User) && ViewBag.SharedUrl == null)
            {
                <button onclick="showModal()" class="btn btn-outline-secondary btn-sm whitehover text-black" style="margin-top: 7px;">
                    <span>Share this forecast!</span>
                    <img src="https://www.svgrepo.com/show/535620/share-nodes.svg" style="width: 14px; margin-top:-2px;" />
                </button>
            }
            <button onclick="showMeteogram()" class="btn btn-outline-secondary btn-sm whitehover text-black" style="margin-top: 7px;">
                <span id="weatherGraphSpan">Show weather graph</span>
                <img src="https://www.svgrepo.com/show/509125/graph.svg" style="width: 19px; margin-top:-2px;" />
            </button>
            <div class="text-center" style="margin-top: 0.5rem; margin-bottom: 0.5rem;">
                <button onclick="showGoogleMap()" class="btn btn-outline-secondary btn-sm whitehover text-black" style="z-index: 2; position: relative">
                    <span id="googlemapSpan">Show google map</span>
                    <img src="https://www.svgrepo.com/show/532548/map-pin-alt.svg" style="width: 19px; margin-top:-2px;" />
                </button>
                <button onclick="showLightningMap()" class="btn btn-outline-secondary btn-sm whitehover text-black" style="z-index: 2; position: relative">
                    <span id="lightningmapSpan">Show lightning map</span>
                    <img src="https://www.svgrepo.com/show/489497/lightning-1.svg" style="width: 19px; margin-top:-2px;" />
                </button>
                <button onclick="showWeatherMap()" class="btn btn-outline-secondary btn-sm whitehover text-black" style="z-index: 2; position: relative">
                    <span id="weathermapSpan">Show weather map</span>
                    <img src="https://www.svgrepo.com/show/479339/weather-9.svg" style="width: 19px; margin-top:-2px;" />
                </button>
            </div>
            <iframe id="googlemap" width="800" height="550" src=@Model.EmbedUrl frameborder="0" scrolling="no" marginheight="0" marginwidth="0" hidden></iframe>
            <iframe id="lightningmap" src=@Model.LightningEmbedUrl width="800" height="550" frameBorder="0" marginheight="0" marginwidth="0" hidden></iframe>
            <iframe id="weathermap" src=@Model.WeatherEmbedUrl width="800" height="550" frameBorder="0" marginheight="0" marginwidth="0" hidden loading="lazy"></iframe>
            <span hidden id="meteogramFiller" style="margin-bottom: -83px; display:block; background-color: white; font-size: 23px; font-weight: 600; padding-top: 40px; margin-top: -30px">Weather graph for: </span>
            <img style="z-index: -2; position: relative" id="meteogram" src=@Model.MeteogramEmbedUrl width="800" frameBorder="0" marginheight="0" marginwidth="0" hidden />
            @if (signInManager.IsSignedIn(User) && ViewBag.SharedUrl == null)
            {
                <img id="qr" alt="Embedded QR Code" width="750" src="data:image/png;base64,@Model.QrCodeBase64" hidden />
            }
            else
            {
                <img alt="Embedded QR Code" width="750" src="data:image/png;base64,@Model.QrCodeBase64" />
            }
        }
	}
	@if (signInManager.IsSignedIn(User))
	{
		<div id="shareLink" hidden>@ViewBag.ShareLink</div>
		<div id="city" hidden>@ViewBag.City</div>
	}
</div>
@if (signInManager.IsSignedIn(User))
{
	<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
